<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/starContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/currentRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="10"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/star1"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_star_24"
        android:contentDescription="Star 1" />

    <ImageButton
        android:id="@+id/star2"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_star_24"
        android:contentDescription="Star 2" />

    <ImageButton
        android:id="@+id/star3"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_star_24"
        android:contentDescription="Star 3" />

    <ImageButton
        android:id="@+id/star4"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_star_24"
        android:contentDescription="Star 4" />

    <ImageButton
        android:id="@+id/star5"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_star_24"
        android:contentDescription="Star 5" />

</LinearLayout>